@inherits SidebarUserBase

<div class="app-top-block-collapsed pb-3 @( IsCollapsed ? "d-inline" : "d-none"  )">
    <div class="d-flex flex-justify-center ">
        <div class="app-footer-buttons anim-fade-in">
            <button @onclick="@Collapse" href="/logout" class="btn-octicon app-octicon app-octicon-hover app-octicon-working tooltipped ml-1 tooltipped-e pl-3" type="button" aria-label="Show menu">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16"><path fill-rule="evenodd" d="M1 2.75A.75.75 0 011.75 2h12.5a.75.75 0 110 1.5H1.75A.75.75 0 011 2.75zm0 5A.75.75 0 011.75 7h12.5a.75.75 0 110 1.5H1.75A.75.75 0 011 7.75zM1.75 12a.75.75 0 100 1.5h12.5a.75.75 0 100-1.5H1.75z"></path></svg>
            </button>
        </div>
    </div>
</div>

<div class="app-panel-left-block mt-2 mb-4 app-panel-left-block-profile pb-1 @( IsCollapsed ? "d-none" : "d-inline"  )">
    <div class="app-panel-left-header app-panel-left-header-profile pl-4 pr-2 css-truncate css-truncate-overflow d-flex flex-items-center">
        <div>
            <img class="avatar avatar-2 mr-2" alt="jonrohan" src="@ImagePath" />
            <span>(@Username) username</span>
        </div>

        <div class="app-panel-left-item-buttons app-sidebar-collapse anim-fade-in">
            <button @onclick="@Collapse" class="btn-octicon app-octicon app-octicon-hover app-octicon-working  ml-1  ml-1  pl-3" type="button">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16"><path fill-rule="evenodd" d="M7.78 12.53a.75.75 0 01-1.06 0L2.47 8.28a.75.75 0 010-1.06l4.25-4.25a.75.75 0 011.06 1.06L4.81 7h7.44a.75.75 0 010 1.5H4.81l2.97 2.97a.75.75 0 010 1.06z"></path></svg>
            </button>
        </div>
    </div>
</div>


